@{
    ViewBag.Title = "Home Page";
}

<style>
    .carousel-inner > .item > img {
        width: 100%;
        height: 1000px;
    }
</style>
<script src="~/Scripts/bootstrap.js"></script>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Images/Tennis-4.jpg" alt="Tennis1">
            <div class="carousel-caption">
                <h3>Knowledge for Beginner</h3>
                <p>10 things you should know as a tennis beginner.</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/tennis.jpg" alt="Tennis2">
            <div class="carousel-caption">
                <h3>Tennis Racket Skills</h3>
                <p>What is the right way to use your racket.</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Images/tn.jpg" alt="Tennis3">
            <div class="carousel-caption">
                <h3>Tennis Trianing Courses</h3>
                <p>Try our tennis traning courses.</p>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
